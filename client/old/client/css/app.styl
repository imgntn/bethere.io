// Example Stylus file

@import 'helpers'

// Main
body
  overflow hidden
  padding 0
  margin 0
  color #FFF
  background-color #BBB
  font-family arial
  font-size 100%

#info
  .top
    position absolute
    top 0px
    width 100%
    padding 5px
    text-align center
  .bottom
    position absolute
    bottom 0px
    right 5px
    padding 5px
  a
    color #66F
    text-decoration none
    &:hover
      text-decoration underline
#signIn
  color #000
#signInError
  color #f00

